    "build": "echo \"No build needed for Svelte/content package\"",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "ajv": "^8.12.0",
    "chalk": "^4.1.2",
    "tsx": "^4.7.0",
    "nodemon": "^3.0.2",
    "@types/js-yaml": "^4.0.9"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "marked": "^12.0.0",
    "js-yaml": "^4.1.0",
    "@moduli/types": "workspace:*"
  }
}
